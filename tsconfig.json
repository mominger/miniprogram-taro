{
  "compilerOptions": {
    "target": "esnext",
    "removeComments": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "strict": false,
    "baseUrl": "./src",
    "paths": {
      "*": ["src/*"],
      "@biz-kit": ["biz-kit"],
      "@biz-kit/*": ["biz-kit/*"],
      "@ui-kit": ["ui-kit"],
      "@ui-kit/*": ["ui-kit/*"],
      "@store/*": ["store/*"],
      "@components/*": ["components/*"],
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}

